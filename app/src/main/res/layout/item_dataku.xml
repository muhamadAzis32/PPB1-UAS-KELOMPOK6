<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="10dp"
    card_view:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Judul Kegiatan"
            android:textSize="18sp"
            android:textStyle="bold"
            android:id="@+id/tv_judulku"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Akan mengadakan acara "
            android:textSize="12sp"
            android:id="@+id/tv_keteranganku"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="18 Desmber 2020"
            android:fontFamily="sans-serif-light"
            android:textSize="10sp"
            android:id="@+id/tv_tanggalku"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/login_btn_bg"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:text="Delete"
                android:id="@+id/btn_deletecard"
                style="@style/btn_Style"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/login_btn_bg"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:text="Update"
                android:id="@+id/btn_updatecard"
                style="@style/btn_Style"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>